<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyunhye.board.fileMapper">
	<resultMap id="list" type="com.hyunhye.board.model.FileModel">
		<result property="boardId" column="boardId" javaType="java.lang.Integer" />
		<result property="fileName" column="fileName" javaType="java.lang.String" />
		<result property="originName" column="originName" javaType="java.lang.String" />
		<result property="extension" column="extension" javaType="java.lang.String" />
	</resultMap>
	
	<insert id="addAttach">
		INSERT INTO FILE (boardId, fileName, originName, extension)
		VALUES
		( (SELECT boardId FROM BOARD ORDER BY boardId desc limit 1) , '${fileName}', '${originName}', '${extension}' )
	</insert>
	
	<select id="getAttach" resultMap="list">
		select fileName from FILE where boardId = #{boardId}; 
	</select>
</mapper>